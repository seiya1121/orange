= form_for @schedule, url: organization_schedule_path(@schedule.organization, @schedule), method: :put, html: { class: 'form-horizontal', role: 'form' } do |f|
  .modal-header
    %h4.modal-title Edit Schedule
  .modal-body
    = render partial: '/schedules/form', locals: { f: f, day: @day, organization: @schedule.organization }
  .modal-footer
    = link_to 'Delete', organization_schedule_path(@schedule.organization, @schedule), method: :delete, data: { confirm: "「#{@schedule.title}」を削除します。よろしいですか？" }, class: 'btn btn-default'
    = f.submit 'Save', data: { disable_with: 'Save' }, class: 'btn btn-primary'
